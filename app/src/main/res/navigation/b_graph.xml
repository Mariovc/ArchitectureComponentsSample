<?xml version="1.0" encoding="utf-8"?>
<navigation
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/b_graph"
        app:startDestination="@id/c_fragment">
    <fragment
            android:id="@+id/c_fragment"
            android:label="Fragment C"
            android:name="com.mvc.architecturecomponents.CFragment"
            tools:layout="@layout/fragment_c">
        <action
                android:id="@+id/action_c_to_d"
                app:destination="@id/d_fragment"
                app:enterAnim="@anim/slide_from_right"
                app:exitAnim="@anim/slide_to_left"
                app:popEnterAnim="@anim/slide_from_left"
                app:popExitAnim="@anim/slide_to_right"/>
    </fragment>
    <fragment
            android:id="@+id/d_fragment"
            android:label="Fragment D"
            android:name="com.mvc.architecturecomponents.DFragment"
            tools:layout="@layout/fragment_d">
    </fragment>
    <action
            android:id="@+id/action_b_graph_pop"
            app:popUpTo="@id/b_graph"
            app:popUpToInclusive="true"/>
</navigation>